@model Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim ekleme sayfası :</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Deneyim Başlığı & Firma Bilgisi</label>
							<input type="text" asp-for="Head" class="form-control"/>
							<br />
							<label>Çalışılan Pozisyon</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<label>Tarih</label>
							<input type="text" asp-for="Date" class="form-control" />
							<button class="btn btn-info">Deneyimi Ekle</button>
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>